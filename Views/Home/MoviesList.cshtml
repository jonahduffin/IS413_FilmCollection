@{
    ViewBag.Title = "View All Movies";
}

@model IEnumerable<joel_hilton_film_collection.Models.MovieSubmissionResponse>
<h2>Here are the movies that have been submitted to Joel Hilton's Film Collection.</h2>

<table class="table table-dark">
    <thead>
        <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th><th>Edit</th><th>Delete</th></tr>
    </thead>
    <tbody>
        @foreach (joel_hilton_film_collection.Models.MovieSubmissionResponse responses in Model)
        {
            @if (responses.Title != "Independence Day")
                {
                    <tr>
                        <td>@responses.Category</td>
                        <td>@responses.Title</td>
                        <td>@responses.Year</td>
                        <td>@responses.Director</td>
                        <td>@responses.Rating</td>
                        <td>@responses.Edited</td>
                        <td>@responses.LentTo </td>
                        <td>@responses.Notes</td>
                        <td>
                            <form id="E-@responses.SubmissionId" asp-action="EditSubmissionForm" method="post">
                                <input type="hidden" asp-for="@responses.SubmissionId" name="editId" />
                                <button type="submit" class="btn-sm btn-info">Edit</button>
                            </form>
                        </td>
                        <td>
                            <form id="D-@responses.SubmissionId" asp-action="Delete" method="post">
                                <input type="hidden" asp-for="@responses.SubmissionId" name="deletionId" />
                                <button type="submit" class="btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
    </tbody>
</table>